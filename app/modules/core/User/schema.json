{
  "tableName": "users",
  "module": "users",
  "description": "User management module",
  "fields": {
    "id": {
      "type": "int",
      "primaryKey": true,
      "autoIncrement": true,
      "comment": "User ID"
    },
    "username": {
      "type": "varchar(100)",
      "nullable": false,
      "unique": true,
      "view": "text",
      "controller": "raw",
      "validation": "required|minLength:3|maxLength:100",
      "comment": "Username"
    },
    "password": {
      "type": "varchar(150)",
      "nullable": false,
      "view": "hidden",
      "controller": "bcrypt",
      "validation": "required|minLength:6",
      "comment": "Encrypted password"
    },
    "email": {
      "type": "varchar(120)",
      "nullable": false,
      "unique": true,
      "view": "email",
      "controller": "raw",
      "validation": "required|email",
      "comment": "User email"
    },
    "first_name": {
      "type": "varchar(50)",
      "nullable": true,
      "view": "text",
      "controller": "raw",
      "comment": "First name"
    },
    "last_name": {
      "type": "varchar(50)",
      "nullable": true,
      "view": "text",
      "controller": "raw",
      "comment": "Last name"
    },
    "is_active": {
      "type": "tinyint(1)",
      "nullable": false,
      "default": 1,
      "view": "checkbox",
      "controller": "raw",
      "comment": "Account active status"
    },
    "refresh_token": {
      "type": "varchar(500)",
      "nullable": true,
      "view": "hidden",
      "controller": "raw",
      "comment": "OAuth2 refresh token for JWT renewal"
    },
    "token_expires_at": {
      "type": "datetime",
      "nullable": true,
      "view": "hidden",
      "controller": "auto",
      "comment": "When current access token expires"
    },
    "oauth2_provider": {
      "type": "varchar(50)",
      "nullable": true,
      "view": "hidden",
      "controller": "raw",
      "comment": "OAuth2 provider (google, facebook, github, etc)"
    },
    "created_at": {
      "type": "timestamp",
      "nullable": false,
      "default": "CURRENT_TIMESTAMP",
      "view": "hidden",
      "controller": "auto",
      "comment": "Creation timestamp"
    },
    "updated_at": {
      "type": "timestamp",
      "nullable": true,
      "onUpdateCurrentTimestamp": true,
      "view": "hidden",
      "controller": "auto",
      "comment": "Last update timestamp"
    }
  },
  "indexes": [
    { "name": "idx_username", "columns": ["username"], "unique": true },
    { "name": "idx_email", "columns": ["email"], "unique": true },
    { "name": "idx_token_expires", "columns": ["token_expires_at"] }
  ]
}
