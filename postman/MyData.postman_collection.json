{
    "info": {
        "name": "teraCore - MyData API",
        "_postman_id": "a1b2c3d4-tera-core",
        "description": "Minimal Postman collection for MyData endpoints (local testing against teraCore).",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost"
        },
        {
            "key": "accessToken",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth - Token",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/x-www-form-urlencoded"
                    }
                ],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "grant_type",
                            "value": "client_credentials"
                        },
                        {
                            "key": "client_id",
                            "value": "test-client"
                        },
                        {
                            "key": "client_secret",
                            "value": "test-secret"
                        }
                    ]
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/token",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "token"
                    ]
                }
            },
            "response": [],
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                            "var json = pm.response.json();",
                            "pm.test('Has access_token', function () { pm.expect(json).to.have.property('access_token'); });",
                            "if(json.access_token){pm.environment.set('accessToken', json.access_token);}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "User - Profile",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/user/profile",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "user",
                        "profile"
                    ]
                }
            },
            "response": [],
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status is 200 or 204', function () { pm.expect([200,204]).to.include(pm.response.code); });",
                            "if(pm.response.code===200){ pm.test('Response has id or username', function(){ var j=pm.response.json(); pm.expect(j).to.satisfy(function(o){ return o.id || o.username; }); }); }"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "Health - Root",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "/"
                    ]
                }
            },
            "response": [],
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                            "pm.test('Body is JSON or text', function(){ try{ JSON.parse(pm.response.text()); } catch(e){ pm.expect(pm.response.text().length).to.be.above(0); } });"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
