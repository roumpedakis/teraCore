{
  "info": {
    "name": "TeraCore API",
    "description": "Requests and tests for current API endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "username",
      "value": "postman_test",
      "type": "string"
    },
    {
      "key": "password",
      "value": "PostmanTest123",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username_or_email\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('login succeeded', function () {",
                  "  pm.expect(pm.response.code).to.eql(200);",
                  "  pm.expect(pm.response.json().success).to.eql(true);",
                  "});",
                  "var data = pm.response.json();",
                  "pm.collectionVariables.set('accessToken', data.tokens.access_token);",
                  "pm.collectionVariables.set('userId', data.data.user_id);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": "{{baseUrl}}/auth/verify"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('verify succeeded', function () {",
                  "  pm.expect(pm.response.code).to.eql(200);",
                  "  pm.expect(pm.response.json().success).to.eql(true);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Invalid Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer invalid_token_here"
              }
            ],
            "url": "{{baseUrl}}/auth/verify"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('invalid token rejected', function () {",
                  "  var body = pm.response.json();",
                  "  pm.expect(pm.response.code).to.eql(401);",
                  "  pm.expect(body.error_code).to.eql('E1002');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
